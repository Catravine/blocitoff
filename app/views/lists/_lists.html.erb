<% if @user.lists.count == 0 %>
  <p>No lists!</p>
<% else %>
  <p>
    <% @user.lists.each_with_index do |list, index| %>
      <span class="list-titles" id='list-<%= list.id %>'>
        <%= link_to list.title, '#' %></span><% unless index == @user.lists.count - 1 %>, <% end %>
    <% end %>
  </p>
<% end %>
